    try {
      return await operation()
    } catch (error) {
      console.error('MCP operation failed:', error)
      
      // Log til memory system
      await this.memory.addObservations({
        observations: [{
          entityName: 'System Errors',
          contents: [`Error: ${error.message}`, `Operation: ${operation.name}`]
